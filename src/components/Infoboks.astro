---

const { title } = Astro.props;
const {infotekst} = Astro.props;

---

<div class="grid_1-1">
  <h3 class="dropdown-header">{title}</h3>
  <p>{infotekst}</p>
  <slot />
</div>
<style>
  .grid_1-1 {
    display: flex;
 flex-direction: column;
width: 70%;
 padding: var(--size-6); 
  }
 
  h3 {
    text-align: center;
  }
</style>
